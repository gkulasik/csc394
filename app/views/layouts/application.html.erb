<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= content_for?(:title) ? yield(:title) : "Ascent Web Store" %></title>

    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    
   <div class="row">
    <div class="large-12 columns">
 
     
 
      <div class="row">
        <div class="large-12 columns">
          <%= image_tag("ascent_web_store_main.PNG") %>
          <nav class="top-bar" data-topbar>
            <ul class="title-area">
               
              <li class="name">
                <h1>
                  <%= link_to "Witty catchphrase here", root_path%>
                 
                </h1>
              </li>
              <li class="toggle-topbar menu-icon"><a href="#"><span>menu</span></a></li>
            </ul>
         
            <% #if !logged_in_admin? %>
            <%= render 'layouts/public_menu' %>
            
                
                <%#else%>
                <%#end%>
            
            
          </nav>
           
        </div>
      </div>
 
     
 
      <div class="row">
 
   
 
        <div class="large-3 small-12 columns">
 
          <div class="hide-for-small panel">
            <h3>Catagories</h3>
            <h5 class="subheader">category info here
              <ul>
                <li>item 1</li>
                <li>item 2</li>
                <li>item 3</li>
              </ul>
            </h5>
          </div>
       <% if logged_in? %> <!--       and is not admin -->
            
            <%= link_to(cart_url) do %>
        
          <div class="panel callout radius">
            <h6><%= current_customer.carts.sum(:quantity) %> items in your cart</h6>
          </div>
            <%end%>
            <%end%>
        </div>
 
     
 
 
     
 
        <div class="large-9 columns">
          <br />
         <% flash.each do |message_type, message| %>
        <div data-alert class="alert-box <%= message_type %>"><%= message %>
          <a href="#" class="close">&times;</a>
          </div>
      <% end %>
 
          <%= yield %>
 
                </div>
              </div>
            </div>
 
     
 
          </div>
        </div>
      </div>
 
 
     
 
      <footer class="row">
        <div class="large-12 columns"><hr/>
          <div class="row">
 
            <div class="large-6 columns">
              <p>Â© Ascent, All rights reserved.</p>
            </div>
 
            <div class="large-6 columns">
              <ul class="inline-list right">
                <li><%= link_to "About", public_pages_about_path %></li>
                <% if !logged_in? %>
                <li><%= link_to "Register", new_customer_path %></li>
                <%end%>
                
                <li> <%= link_to "Shop", items_url %></li>
                <% if logged_in? %>
                <li><%= link_to "Profile", edit_customer_path(current_customer) %></li>
                <%end%>
                <li><%= link_to "Privacy Policy", public_pages_privacy_policy_path %> </li>
              </ul>
            </div>
 
          </div>
        </div>
      </footer>
 
     
 
    </div>
  </div>
    

    <%= javascript_include_tag "application" %>
  </body>
</html>