<h1 style= "color:blue"> Welcome to Ascent!
</h1>
<h4 style= "color:#33CCFF;text-align:center"> Featured Items</h4>

<ul class="orbit" data-orbit>
  <% @items.each do |i| %>
  <li>
    <center><%= link_to image_tag(i.images.first.img.url(:medium), alt: i.title), i %></center>
    <div class="orbit-caption">
      <%= i.title %>
    </div>
  </li>
 <%end%>
</ul>
