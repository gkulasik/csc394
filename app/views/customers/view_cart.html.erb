<h4>Shopping Cart</h4>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>Total Price</th>
      <th>Change</th>
      <th>Remove?</th>
    </tr>
  </thead>
<%  total_cost = 0 %>
  <tbody>
    <% current_customer.carts.each do |cart| %>
    <% item_cost = cart.item.unit_price*cart.quantity %>
    <% total_cost += item_cost %>
      <tr>
        <td><%= link_to cart.item.title, cart.item %></td>
        <td><%= cart.quantity%></td>
        <td><%= number_to_currency(cart.item.unit_price)%></td>
        <td><%= number_to_currency(item_cost) %></td>
        <td><%= link_to "Edit", carts_update_cart_path(cart_id: cart.id) %></td>
        <% if current_customer == cart.customer %>
        <td><%= link_to "Remove from cart", "/carts/#{cart.id}", method: :delete,
  data: { confirm: "Are you sure you want to remove this item from your cart?" }%>
    <% end %>
        </td>
        </tr>
    
    <% end %>
    <td>
      Total Items:
    </td>
    <td>
      <%= current_customer.carts.sum(:quantity) %>
    </td>
    <td>
      Total Cost:
      </td>
    <td><%= number_to_currency(total_cost)%></td>
    <td></td>
    <td></td>
  </tbody>
</table>

<%= link_to "Check out", root_path, class: "button small" %>
