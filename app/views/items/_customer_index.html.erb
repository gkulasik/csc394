
<div class="row">
  <% @items.each do |item| %>
            <div class="large-4 small-6 columns" style="float:left;">
              <% if !item.images.first.nil? %>
              <%= link_to image_tag(item.images.first.img.url(:medium), alt: item.title), item %>
              <%else%>
              <%= link_to image_tag("http://placehold.it/300x300&text=Thumbnail", alt: item.title), item %>
              <%end%>
 
              <div class="panel">
                <h5><%= link_to item.title, item %></h5>
                <h6 class="subheader"><%= number_to_currency(item.unit_price) %>/each</h6>
              </div>
            </div>
 
  <%end%>
            </div>
         