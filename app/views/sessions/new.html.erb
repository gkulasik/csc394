<%= provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="small-6 columns">
    <%= form_for(:session, url: login_path) do |f|%>
    <div class="field">
    <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
   <div class= "field">
     <%= f.label :password %>
     <%= f.password_field :password %>
    </div>
   
    
    <%= f.submit "Log in", class: "button small"%>
    
    
    <%end%>
    <p>New Customer? <%= link_to "Sign up Now!", sign_up_path %> </p>

</div>
  
</div>